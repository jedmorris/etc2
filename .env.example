# Etsy OAuth (Public App)
# Used as client_id in OAuth flows and x-api-key header for API calls
ETSY_API_KEY=your-etsy-api-key
ETSY_API_SECRET=your-etsy-api-secret
ETSY_REDIRECT_URI=http://localhost:3000/callback/etsy

# Shopify App
# Used as client_id / client_secret in OAuth flows and HMAC verification
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_REDIRECT_URI=http://localhost:3000/callback/shopify

# Token Encryption (AES-256-GCM)
# 32 bytes, hex-encoded (64 hex chars). Generate with:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TOKEN_ENCRYPTION_KEY=your-64-hex-char-key

# Resend (Email)
RESEND_API_KEY=re_...
FROM_EMAIL=noreply@yourdomain.com

# Modal
MODAL_TOKEN_ID=your-modal-token-id
