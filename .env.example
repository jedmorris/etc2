STRIPE_STARTER_PRICE_ID=price_...
STRIPE_GROWTH_PRICE_ID=price_...
STRIPE_PRO_PRICE_ID=price_...
STRIPE_METERED_PRICE_ID=price_...

# Etsy OAuth (Public App â€” PKCE, no secret needed)
# Used as client_id in OAuth flows and x-api-key header for API calls
ETSY_API_KEY=your-etsy-api-key
# Webhook signing secret from Etsy Webhook Portal (has whsec_ prefix)
ETSY_WEBHOOK_SECRET=whsec_...

# Shopify App
# Used as client_id / client_secret in OAuth flows and HMAC verification
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret

# Token Encryption (AES-256-GCM)
# 32 bytes, hex-encoded (64 hex chars). Generate with:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TOKEN_ENCRYPTION_KEY=your-64-hex-char-key

# Resend (Email)
RESEND_API_KEY=re_...
FROM_EMAIL=noreply@yourdomain.com

# Modal
MODAL_TOKEN_ID=your-modal-token-id
MODAL_TOKEN_SECRET=your-modal-token-secret

# Beehiiv (Newsletter subscriber intake)
BEEHIIV_API_KEY=your-beehiiv-api-key
BEEHIIV_PUBLICATION_ID=pub_xxxxxxxx
BEEHIIV_WEBHOOK_SECRET=whsec_xxxxxxxx

# Substack (Newsletter distribution)
SUBSTACK_PUBLICATION_URL=https://yourpub.substack.com

# Newsletter owner (your Supabase user_id for subscriber tracking)
NEWSLETTER_OWNER_USER_ID=your-supabase-user-uuid

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
